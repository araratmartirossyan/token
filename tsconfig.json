{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "src",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": false,
        "preserveConstEnums": true,
        "allowJs": false,
        "sourceMap": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": false,
        "skipLibCheck": true
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "types": [
        "react",
        "jest"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/__tests__/*",
        "dist/__tests__/*",
    ],
    "compileOnSave": true
}